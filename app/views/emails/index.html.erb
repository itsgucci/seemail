<h1>All Mail</h1>

<table>
  <tr>
    <th>To</th>
    <th>From</th>
    <th>Subject</th>
    <th>Message</th>
    <th>Time</th>
    <th></th>
  </tr>

<% @emails.each do |email| %>
  <tr>
    <td><%= email.to %></td>
    <td><%= email.from %></td>
    <td><%= email.subject %></td>
    <td><%= email.message %></td>
    <td><%= email.time %></td>
    <td><%= link_to 'Show', email %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Email', new_email_path %>
